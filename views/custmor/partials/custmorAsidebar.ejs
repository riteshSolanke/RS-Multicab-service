<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer Panel</title>
    <style>
      /* Sidebar */
      .sidebar {
        min-width: 250px;
        max-width: 250px;
        background-color: #34495e;
        color: white;
        display: flex;
        flex-direction: column;
      }

      .sidebar-header {
        max-height: 60px;
        text-align: center;
        padding: 15px 20px;
        border-bottom: 1px solid #2c3e50;
        font-size: 1.2rem;
        font-weight: bold;
        border: 1px solid gray;
      }

      .sidebar-menu ul {
        list-style: none;
        padding: 20px 0;
        height: 90vh;
        overflow-y: scroll;
        scrollbar-width: none;
      }

      .sidebar-menu ul li {
        margin: 10px 0;
      }

      .sidebar-menu ul li a {
        color: white;
        text-decoration: none;
        padding: 12px 20px;
        display: block;
        transition: background 0.3s ease;
      }

      .sidebar-menu ul li a:hover,
      .sidebar-menu ul li a.active {
        background-color: #2c3e50;
        border-left: 5px solid #1abc9c;
      }
    </style>
  </head>
  <body>
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <% if (locals.custmorInfo && locals.custmorInfo.serviceName) { %>
        <h1><%- locals.custmorInfo.serviceName %></h1>
        <% } else { %>
        <h1>Customer Panel</h1>
        <% } %>
      </div>

      <nav class="sidebar-menu">
        <ul>
          <% if (locals.custmorInfo && locals.custmorInfo.id) { %>
          <li>
            <a href="/custmor/" class="active">
              <i class="icon-dashboard"></i> Home
            </a>
          </li>
          <li>
            <a href="/custmor/checkBooking">
              <i class="icon-users"></i> Check Bookings
            </a>
          </li>
       
          <li>
            <a href="/custmor/checkEnquiry">
              <i class="icon-drivers"></i> Check Enquiry
            </a>
          </li>
          <li>
            <li>
              <a href="#">
                <i class="icon-drivers"></i> Check Sms
              </a>
            </li>
            <li>
            <a href="/custmor/driver">
              <i class="icon-payments"></i> Drivers
            </a>
          </li>
          <li>
            <a href="/custmor/addDrivers">
              <i class="icon-reports"></i> Add Drivers
            </a>
          </li>
          <% } %>

          <li>
            <a href="/custmor/manageWebsite">
              <i class="icon-rides"></i> Manage Website
            </a>
          </li>

          <!-- Static Menu Items (Always Visible) -->
          <li>
            <a href="/custmor/manageDestination"><i class="icon-settings"></i> Manage Destination</a>
          </li>
          <li>
            <a href="/custmor/managePackage"><i class="icon-settings"></i> Manage Packages</a>
          </li>
         
          <li>
            <a href="#"><i class="icon-settings"></i> Add Holiday Window</a>
          </li>
          <li>
            <a href="/custmor/manageCar"><i class="icon-settings"></i> Manage Cars</a>
          </li>
        </ul>
      </nav>
    </aside>

    <script src="/admin/adminJs/partials/asidebar.js"></script>
  </body>
</html>
