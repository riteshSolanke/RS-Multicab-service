<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      /* Sidebar */
      .sidebar {
        min-width: 250px;
        max-width: 250px;
        background-color: #34495e;
        color: white;
        display: flex;
        flex-direction: column;
        height: 100vh;
      }

      .sidebar-header {
        max-height: 60px;
        text-align: center;
        padding: 15px 20px;
        border-bottom: 1px solid #2c3e50;
        font-size: 1.2rem;
        font-weight: bold;
      }

      .sidebar-menu ul {
        list-style: none;
        padding: 20px 0;
      }

      .sidebar-menu ul li {
        margin: 10px 0;
      }

      .sidebar-menu ul li a {
        color: white;
        text-decoration: none;
        padding: 12px 20px;
        display: block;
        transition: background 0.3s ease;
      }

      .sidebar-menu ul li a:hover,
      .sidebar-menu ul li a.active {
        background-color: #2c3e50;
        border-left: 5px solid #1abc9c;
      }
    </style>
  </head>
  <body>
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <h2>Admin Panel</h2>
      </div>
      <nav class="sidebar-menu">
        <ul>
          <li>
            <a href="/admin/" class="active"
              ><i class="icon-dashboard"></i> Home</a
            >
          </li>
          <li>
            <a href="/admin/custmors"><i class="icon-users"></i> Custmor</a>
          </li>
          <li>
            <a href="/admin/addCustmor"
              ><i class="icon-rides"></i> Add Custmor</a
            >
          </li>
          <li>
            <a href="/admin/drivers"><i class="icon-drivers"></i> Driver</a>
          </li>
          <li>
            <a href="#"><i class="icon-payments"></i> Payments</a>
          </li>
          <li>
            <a href="#"><i class="icon-reports"></i> Reports</a>
          </li>
          <li>
            <a href="#"><i class="icon-settings"></i> Settings</a>
          </li>
        </ul>
      </nav>
    </aside>
    <script src="/admin/adminJs/partials/asidebar.js"></script>
  </body>
</html>
