<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/user/userCss/holiday.css" />
 
  </head>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <body>
    <div class="main_page">
      <!-- navbar -->
      <nav><%- include('partials/navbar') %></nav>
      <section><%- include('partials/upSection') %></section>

      <!-- page content -->
      <div class="destination_windows">

        <% if (locals.destinationInfo && locals.destinationInfo.length > 0) { %>
          <% destinationInfo.forEach(destination => { %>
            <% if (destination.addToHolidayWindow) { %>
            
              <div><figure>
                <img src="<%= destination.destinationImg%>" alt="">
                <div class="innerDiv"><a href="/<%= custmorInfo.serviceUrlLink %>/dynamic/<%= destination._id %>"><%= destination.destinationName %></a></div>
                         </figure></div>  
          <% } %>
          <% }) %>
      <% } else { %>
          <li>No destinations available</li>
      <% } %>

      </div>
      <!-- footer -->
      <footer><%- include('partials/footer') %></footer>
    </div>
    <script src="/user/userJs/holiday.js"></script>
    <script src="/common/commonJs/alertMsg.js"></script>
  </body>
</html>
